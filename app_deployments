apiVersion: v1
kind: Namespace
metadata:
  name: app
  labels:
    app.kubernetes.io/name: myapp

---

apiVersion: apps/v1
kind: Deployment
metadata:
  name: app
  labels:
    app.kubernetes.io/name: myapp
  namespace: app
    
spec:
  selector:
    matchLabels:
      app.kubernetes.io/name: myapp
      
  replicas: 3
  template:
    metadata:
      labels:
        app.kubernetes.io/name: myapp

    spec:
      containers:
      - name: myapp
        image: 678092784151.dkr.ecr.us-east-1.amazonaws.com/myrepo_clo835:my_app
          
        ports:
        - containerPort: 80
        env:
        - name: DBPORT
          value: "3306"
        - name: DBHOST
          value: "10.244.0.5"
        - name: DBUSER
          value: root
        - name: DBPWD
	  value: pw
